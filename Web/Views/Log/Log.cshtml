<style>

    .toggle-grid {
        position: relative;
        width: 40px;
        height: 20px;
        -webkit-appearance: none;
        background: #c6c6c6;
        outline: none;
        border-radius: 20px;
        box-shadow: inset 0 0 5px rgba(0,0,0,.2);
        margin-top: 4px;
        transition: .5s;
    }

    input:checked[type="checkbox"]  {
        background: rgb(28, 132, 198);
    }

    .toggle-grid:before {
        content: '';
        position: absolute;
        width: 16px;
        height: 16px;
        border-radius: 20px;
        top: 0;
        left: 0;
        background: #fff;
        transform: scale(1.1);
        box-shadow: 0 2px 5px rgba(0,0,0,.2);
        transition: .5s;
        margin: 2px 2px;
    }

    input:checked[type="checkbox"]:before {
        left: 20px;
    }

    .btnSaveLog {
        display: inline-flex;
        float: left;
        

    }

    .Ruta {
        display: inline-flex !important;        
    }

    .fileLog {
        margin-right: 10px;
    }

</style>

